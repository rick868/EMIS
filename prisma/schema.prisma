generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                Int      @id @default(autoincrement())
  username          String   @unique
  email             String   @unique
  passwordHash      String
  role              Role     @default(EMPLOYEE)
  resetToken        String?
  resetTokenExpiry  DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  employee          Employee?
  logs              Log[]

  @@map("users")
}

model Employee {
  id           Int      @id @default(autoincrement())
  name         String
  department   String
  departmentId Int?
  position     String
  salary       Float
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User?
  feedback     Feedback[]
  departmentRef Department? @relation(fields: [departmentId], references: [id])

  @@map("employees")
}

model Feedback {
  id            Int      @id @default(autoincrement())
  employeeId    Int
  category      String
  categoryId    Int?
  message       String
  dateSubmitted DateTime @default(now())

  employee      Employee     @relation(fields: [employeeId], references: [id])
  category      FeedbackCategory? @relation(fields: [categoryId], references: [id])

  @@map("feedback")
}

model Log {
  id        Int      @id @default(autoincrement())
  action    String
  userId    Int?
  details   String
  timestamp DateTime @default(now())
  ipAddress String?

  user      User? @relation(fields: [userId], references: [id])

  @@map("logs")
}

model Department {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  employees   Employee[]

  @@map("departments")
}

model FeedbackCategory {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  feedback    Feedback[]

  @@map("feedback_categories")
}

enum Role {
  ADMIN
  HR
  EMPLOYEE
}
